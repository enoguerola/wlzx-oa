<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="system.wlims.basic.entity.teacher.TeacherDepartment" table="basic_teacher_department">
		<id name="id">
			<column name="department_id" />
			<generator class="native" />
		</id>
		<property name="department" type="string">
			<column name="teacher_department" />
		</property>
		<property name="position" type="string">
			<column name="teacher_position" />
		</property>
		<many-to-one class="system.wlims.basic.entity.teacher.TeacherModel" 
			name="teacher" 
			column="teacher_id" lazy="proxy"/>	
	</class>
</hibernate-mapping>