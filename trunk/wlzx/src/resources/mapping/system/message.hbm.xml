<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="system.entity.MessageModel" table="wlzx_system_message">
		<id name="id">
			<column name="id" /> 
			<generator class="native" />
		</id>
	
		<property name="status" type="int">
			<column name="status" />
		</property>
		<property name="type" type="int">
			<column name="type" />
		</property>
		<property name="content" type="string">
			<column name="content" />
		</property>
		<property name="creationDate" type="java.util.Date">
			<column name="creation_date" />
		</property>
		<property name="readDate" type="java.util.Date">
			<column name="read_date" />
		</property>
		<many-to-one class="system.entity.UserModel" name="from" column="from_user_id" lazy="false"/>	
		<many-to-one class="system.entity.UserModel" name="to" column="to_user_id" lazy="false"/>	
	</class>
</hibernate-mapping>
