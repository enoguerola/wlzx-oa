<?xml version="1.0" encoding="utf-8"?>
<!-- MONTH CELL IS USED IN MONTH VIEW TO SHOW SQUARE BOXES
DESCRIPTION TEXT IS USED TO SHOW EVENT'S DESCRIPTION 
-->
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" 
	height="150" 
	styleName="canDayCellBase">
	<mx:HBox width="100%" height="100%" horizontalGap="0" paddingTop="0" paddingBottom="0"   backgroundColor="#D0E8AA" alpha="0.3" borderVisible="false">
		<mx:VBox  width="10%" height="100%"  paddingTop="0" paddingBottom="0" borderVisible="false">
			<mx:ApplicationControlBar  id="canHeader" height="100%" width="100%" styleName="appBarDayCell" paddingTop="0" paddingBottom="0" horizontalAlign="center" verticalAlign="middle">
				<mx:Label width="100%" height="100%" id="lblDate" color="black" fontWeight="bold" textAlign="center"/>
			</mx:ApplicationControlBar>
		</mx:VBox>
		<mx:VBox backgroundColor="white" width="90%" height="100%"  paddingTop="0" paddingBottom="0" borderVisible="false">
			<mx:TextArea  width="100%" height="100%" editable="false" selectable="false" id="txtDesc" styleName="txtArea" />
		</mx:VBox>
	</mx:HBox>
	
</mx:Canvas>