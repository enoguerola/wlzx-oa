	<s:NavigatorContent label="来文正文" width="100%" height="100%">
	<content:receiptText width="100%" id="receipt_text"/>
	</s:NavigatorContent>
	<s:NavigatorContent label="来文登记单" width="100%" height="100%">
	<content:DeviseDetail width="100%" id="receipt_file"/>
	</s:NavigatorContent>
	</mx:TabNavigator>-->
</mx:Module>
