							</mx:GridItem>
							<mx:GridItem    verticalAlign="middle"  colSpan="5" horizontalAlign="center">
								<mx:TextArea width="100%" height="100" id="applyReason"/>
							</mx:GridItem>
							<mx:GridItem     verticalAlign="middle" horizontalAlign="center">
								
							</mx:GridItem>
						</mx:GridRow>
