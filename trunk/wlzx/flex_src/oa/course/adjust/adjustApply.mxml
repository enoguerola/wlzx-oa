					<mx:HBox width="100%"  horizontalAlign="right">
						<mx:Button label="保存" width="60" click="save_clickHandler(event)"/>
					</mx:HBox>
				</mx:VBox>
				
				
				
			</mx:VBox>
		</mx:VBox>
		
	</mx:Panel>
