			private function validateInput():Boolean
			{	
				for(var i:int=0;i<timeContainer.getChildren().length;i++){
					var row:GridRow=timeContainer.getChildAt(i) as GridRow;
					var rowItem:GridItem=row.getChildAt(0) as GridItem;
					var date:DateField=rowItem.getChildAt(0) as DateField;
					var morning:CheckBox=rowItem.getChildAt(1) as CheckBox;
					var afternoon:CheckBox=rowItem.getChildAt(2) as CheckBox;
					var evening:CheckBox=rowItem.getChildAt(3) as CheckBox;
					
					validatorArr = new Array();
					date_stringValidator.source=date;
					reason_stringValidator.source=reason;
					validatorArr.push(date_stringValidator);
					validatorArr.push(reason_stringValidator);
					officeChiefApproveTime_stringValidator.source=officeChief_approve_time;
					officeChiefApproverName_stringValidator.source=officeChief_approver_name;
					validatorArr.push(officeChiefApproveTime_stringValidator);
					validatorArr.push(officeChiefApproverName_stringValidator);
					var validatorErrorArray:Array = Validator.validateAll(validatorArr);
					var isValidForm:Boolean = validatorErrorArray.length == 0;
					if (isValidForm) {
						if(morning.selected==false&&afternoon.selected==false&&evening.selected==false){
							Alert.show("请至少制定一个'"+date.text+"'当天的加班时间段");
							return false;
						}
						if(officeChief_approve_status_pass.selected==false&&officeChief_approve_status_deny.selected==false){
							Alert.show("请指定审批结果");
							return false;
						}
						continue;
					} else {
						
						return false;
					}
					
					
				}
				return true;
				
			}
