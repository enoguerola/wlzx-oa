<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		   xmlns:s="library://ns.adobe.com/flex/spark" 
		   xmlns:mx="library://ns.adobe.com/flex/mx" layout="absolute" width="100%" height="100%" xmlns:component="system.component.*">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Style>
		.customTabStyles {
			skin: ClassReference("system.skins.WlzxSubTabSkin");
			border:1px;
		}
	</fx:Style>
	<s:Panel width="100%" height="100%"  skinClass="system.skins.WlzxPanelSkin" title="公告管理"  borderVisible="false" dropShadowVisible="false">
		<mx:TabNavigator id="systems"  width="100%" height="100%" tabStyleName="customTabStyles"  horizontalGap="5" borderVisible="false" paddingTop="0" paddingBottom="0" paddingLeft="0" paddingRight="0" tabWidth="160" tabHeight="30">
			<s:NavigatorContent label="我保存的公告" width="100%" height="100%">
				<s:VGroup gap="20" width="100%" height="100%"  paddingTop="10" paddingBottom="10" paddingLeft="20" paddingRight="20" horizontalAlign="center" verticalAlign="middle">
					<s:Panel width="100%" height="30%"  skinClass="system.skins.WlzxPanelSkin" title="搜索条件"  borderVisible="true" >
						<mx:Form width="100%" height="100%" verticalGap="10" >
							<mx:FormItem label="标题+内容" width="100%">
								<s:TextInput width="100%"/>
							</mx:FormItem>
							<mx:FormItem label="公告类型" width="100%">
								<s:HGroup  width="100%" gap="20">
									<s:ComboBox/>
									<mx:FormItem label="是否紧急">
										<s:ComboBox/>
									</mx:FormItem>
									<mx:FormItem label="是否必读">
										<s:ComboBox />
									</mx:FormItem>
									<mx:Image source="@Embed(source='../WebContent/resources/oa/buttonIcon/search.jpg')" left="50"></mx:Image>
								</s:HGroup>
							</mx:FormItem>
						</mx:Form>
					</s:Panel>
					<s:Panel width="100%" height="70%"  skinClass="system.skins.WlzxPanelSkin" title="公告列表"  borderVisible="true">
						<s:VGroup  width="100%" height="100%" gap="0">
							<component:WlzxDataGrid width="100%" height="100%" borderVisible="false"   borderAlpha="0.2" verticalAlign="middle" id="mydg">				
								<component:mygridcolumns>
									<mx:DataGridColumn textAlign="center"  headerText="选择" dataField="loginaccount" width="50">
										<mx:itemRenderer>
											<fx:Component>
												<!-- 演示不依赖于数据源的checkbox的使用 -->
												<mx:CheckBox label=""  textAlign="center"/>
												<!--
												如果name不是属性而是子节点，那直接用data.name就出来了,
												这里不能用@name来取属性!
												-->
											</fx:Component>
										</mx:itemRenderer>
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="标记" dataField="loginaccount" width="50">
										
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="公告类型" dataField="type" width="150">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="公告标题" dataField="name" width="500">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="发布时间" dataField="col3" width="150">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="发布部门" dataField="col3" width="150">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="预览" dataField="col3" width="100">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="操作记录" dataField="col3" width="100">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="编辑" dataField="col3" width="100">
									</mx:DataGridColumn>
									<mx:DataGridColumn textAlign="center" headerText="删除" dataField="col3" width="100">
									</mx:DataGridColumn>
								</component:mygridcolumns>
							</component:WlzxDataGrid>
							<s:HGroup gap="20" paddingLeft="20" paddingTop="-10">
								<mx:Image  source="@Embed(source='../WebContent/resources/oa/buttonIcon/allPick.jpg')" top="-40">
									
								</mx:Image>
								<mx:Image  source="@Embed(source='../WebContent/resources/oa/buttonIcon/delete.jpg')" top="-40">
									
								</mx:Image>
							</s:HGroup>
							
						</s:VGroup>
						
					</s:Panel>
				</s:VGroup>

			</s:NavigatorContent>
			<s:NavigatorContent label="我发布的公告" width="100%" height="100%">
			</s:NavigatorContent>
			<s:NavigatorContent label="待签批的公告" width="100%" height="100%">
			</s:NavigatorContent>
			<s:NavigatorContent label="签批退回公告" width="100%" height="100%">
			</s:NavigatorContent>	
		</mx:TabNavigator>
	</s:Panel>
</mx:Module>
