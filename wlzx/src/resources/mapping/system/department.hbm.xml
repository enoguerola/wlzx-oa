<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="system.entity.DepartmentModel" table="wlzx_system_department">
		<cache usage="read-write"/>
		<id name="id">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="symbol" type="string" unique="true">
			<column name="symbol" />
		</property>
		<property name="sequence" type="int">
			<column name="sequence" />
		</property>
		<property name="name" type="string">
			<column name="name" />
		</property>
		<property name="phone" type="string">
			<column name="phone" />
		</property>
		<property name="detail" type="string">
			<column name="detail" />
		</property>
		<property name="creationDate" type="java.util.Date">
			<column name="creation_date" />
		</property>
		<property name="modifiedDate" type="java.util.Date">
			<column name="modified_date" />
		</property>

		<set name="subordinates" lazy="false"  table="wlzx_system_department_leadship" cascade="all">
			<cache usage="read-write" />
			<key column="leader_id" not-null="true" />
			<many-to-many   column="subordinate_id"  class="system.entity.DepartmentModel" /> 
		</set>
		<set name="leaders" lazy="false"  table="wlzx_system_department_leadship">
			<cache usage="read-write" />
			<key column="subordinate_id" not-null="true" />
			<many-to-many  column="leader_id"  class="system.entity.DepartmentModel" /> 
		</set>
		
		<set name="dataAccessModes" lazy="false"  table="wlzx_system_department_dam_relationship" cascade="all">
			<cache usage="read-write" />
			<key column="department_id" not-null="true" />
			<many-to-many column="dam_id" class="system.entity.DataAccessModeModel" /> 
		</set>
		<set name="roles" lazy="false"  table="wlzx_system_department_role_relationship" cascade="all-delete-orphan">
			<cache usage="read-write" />
			<key column="department_id" not-null="true" />
			<many-to-many column="role_id" class="system.entity.RoleModel" /> 
		</set>
		<set name="leaderRoles" lazy="false"  table="wlzx_system_role_department_leadership">
			<cache usage="read-write" />
			<key column="department_id" not-null="true" />
			<many-to-many column="role_id" class="system.entity.RoleModel" /> 
		</set>
		<set name="mainUsers" lazy="false"  table="wlzx_system_user" inverse="true" cascade="none">
			<cache usage="read-write" />
			<key column="main_department_id" not-null="true" />
			<one-to-many class="system.entity.UserModel" />  
		</set>
		
	</class>
</hibernate-mapping>