<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="system.entity.OperationModel" table="wlzx_system_operation">
		<id name="id">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="symbol" type="string" unique="true">
			<column name="symbol" />
		</property>
		<property name="name" type="string">
			<column name="name" />
		</property>
		<property name="detail" type="string">
			<column name="detail" />
		</property>
		<property name="url" type="string">
			<column name="url" />
		</property>
		<property name="creationDate" type="java.util.Date">
			<column name="creation_date" />
		</property>
		<property name="modifiedDate" type="java.util.Date">
			<column name="modified_date" />
		</property>
		<set name="dataAccessModes" lazy="false"  table="wlzx_system_operation_dam_relationship" cascade="all-delete-orphan">
			<key column="operation_id" not-null="true" />
			<many-to-many column="dam_id" class="system.entity.DataAccessModeModel" /> 
		</set>
		<set name="modules" lazy="false"  table="wlzx_system_module_operation_relationship" cascade="all" inverse="true">
			<key column="operation_id" not-null="true" />
			<many-to-many column="module_id" class="system.entity.ModuleModel" /> 
		</set>
	</class>
</hibernate-mapping>