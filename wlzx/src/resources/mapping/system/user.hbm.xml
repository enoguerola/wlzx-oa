<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="system.entity.UserModel" table="wlzx_system_user">
		<id name="id">
			<column name="id" /> 
			<generator class="native" />
		</id>
		<property name="symbol" type="string" unique="true">
			<column name="symbol" />
		</property>
		<property name="sequence" type="int">
			<column name="sequence" />
		</property>
		<property name="name" type="string">
			<column name="name" />
		</property>
		<property name="password" type="string">
			<column name="password" />
		</property>
		<property name="creationDate" type="java.util.Date">
			<column name="creation_date" />
		</property>
		<property name="modifiedDate" type="java.util.Date">
			<column name="modified_date" />
		</property>
		<property name="lastLoginTime" type="java.util.Date">
			<column name="last_login_time" />
		</property>
		<property name="lastLoginIP" type="string">
			<column name="last_login_ip" />
		</property>
		<property name="email" type="string">
			<column name="email" />
		</property>
		<set name="subordinates" lazy="false"  table="wlzx_system_user_leadship" cascade="all">
			<key column="leader_id" not-null="true" />
			<many-to-many  column="subordinate_id"  class="system.entity.UserModel" /> 
		</set>
		<set name="leaders" lazy="false"  table="wlzx_system_role_user_relationship" cascade="all"  inverse="true">
			<key column="subordinate_id" not-null="true" />
			<many-to-many  column="leader_id"  class="system.entity.UserModel" /> 
		</set>
		<set name="roles" lazy="false"  table="wlzx_system_role_user_relationship" cascade="all">
			<key column="user_id" not-null="true" />
			<many-to-many  column="role_id" class="system.entity.RoleModel" /> 
		</set>
	</class>
</hibernate-mapping>
