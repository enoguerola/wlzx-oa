<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"  height="100%">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>    
		<![CDATA[   
			import mx.modules.*;
			private var default_url:String="system/index.swf";
			private function switchModel(url:String):void {
				moduleLoader.unloadModule();
				if(!url)url=default_url;
				moduleLoader.percentHeight=100;
				moduleLoader.percentWidth=100;
				moduleLoader.loadModule(url);
			}

			
		]]>    
	</fx:Script> 
	<mx:ModuleLoader id="moduleLoader" url="basic/index.swf" width="100%"  height="100%"/> 
</s:Application>
