<?xml version="1.0" encoding="utf-8"?>
<!-- MONTH CELL IS USED IN MONTH VIEW TO SHOW SQUARE BOXES
	DESCRIPTION TEXT IS USED TO SHOW EVENT'S DESCRIPTION 
-->
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" 
	height="150" 
	styleName="canDayCellBase">
	<mx:VBox width="100%" height="100%" verticalGap="0" paddingTop="0" paddingBottom="0" backgroundColor="#D0E8AA" alpha="0.3">
		<mx:VBox  width="100%" height="20">
			<mx:ApplicationControlBar  id="canHeader" height="100%" width="100%" styleName="appBarDayCell" paddingTop="0" paddingBottom="0" horizontalAlign="center" verticalAlign="middle">
				<mx:Label width="100%" height="100%" id="lblDate" color="black" fontWeight="bold" styleName="lblHours"  textAlign="center"/>
			</mx:ApplicationControlBar>
		</mx:VBox>
		<mx:VBox backgroundColor="white" width="100%" height="100%"  paddingTop="0" paddingBottom="0" >
			<mx:TextArea  width="100%" height="100%" editable="false" selectable="false" id="txtDesc" styleName="txtArea"/>
		</mx:VBox>
	</mx:VBox>
	
</mx:Canvas>