					takeLeave_leave.text=item.takeLeave_leaveTimes+'|'+item.takeLeave_leaveDaySections;
					takeLeave_businessTrip.text=item.takeLeave_businessTripTimes+'|'+item.takeLeave_businessTripDaySections;
					overWork.text=item.overWorkTimes+'|'+item.overWorkDaySections;
					moveRestDay.text=item.moveRestDayTimes+'|'+item.moveRestDayDaySections;
				}
				unLockWin();

